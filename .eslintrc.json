{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "semi":"error",
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "no-multi-spaces": ["error"],
        "arrow-body-style": ["error", "as-needed"],
        "max-len": ["error", { "code": 80, "ignoreComments": true }]
    }
}
